%section#password-form
	.container
		.row
			.col-md-4.col-md-offset-4
				%h1
					%center KakiTube
				.form-box
					.page-header
						%h2.text-center Reset Password
						%hr
						= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
							= devise_error_messages!
							.form-group
								= f.text_field :username, autofocus: true, class: "form-control input-lg", placeholder: "Username"
							.form-group
								= f.submit "Reset my password", class: "btn btn-primary btn-lg btn-block"
